/* ORACLE SQL NOTES */

/* ONLY TAKES THESE NAMES USES OR STATEMENT */
SELECT ENAME, HIREDATE FROM EMP
WHERE ENAME = 'FORD'
OR ENAME = 'SMITH';

/* ONLY TAKES THESE NAMES USES IN STATEMENT */
SELECT ENAME, HIREDATE FROM EMP
WHERE ENAME IN ('FORD', 'SMITH', 'ALLEN', 'WARD', 'MARTIN');

/* TAKES THE NAMES OUT USING NOT IN STATEMENT */
SELECT ENAME, HIREDATE FROM EMP
WHERE ENAME NOT IN ('FORD', 'SMITH', 'ALLEN', 'WARD', 'MARTIN');

/* USE BETWEEN STATEMENT FOR HIREDATE */
SELECT * FROM EMP
WHERE HIREDATE BETWEEN '05/01/1981' AND '12/09/1982';

/* USE BETWEEN STATEMENT FOR SALARY */
SELECT * FROM EMP
WHERE SAL BETWEEN 1000 AND 2000;

/* USE NOT BETWEEN STATEMENT FOR SALARY */
SELECT * FROM EMP 
WHERE SAL NOT BETWEEN 950 AND 1600;

/* RETURNS NULL EMPLOYEES USING IS STATEMENT */
SELECT * FROM EMP
WHERE COMM IS NULL;

/* RETURNS EMPLOYEES WITHOUT NULL IN COMMISION CATEGORY USING IS NOT NULL STATEMENT*/
SELECT * FROM EMP
WHERE COMM IS NOT NULL;

/* WRITE A QUERY THAT RETURNS THOSE EMPLOYEES THAT DONT MAKE ANY COMMISION AND HAVE A SALARY GREATER
THAN 1100 BUT LESS THAN 5000. EXCLUDE THOSE EMPLOYEES THAT HAVE A SALARY EQUAL TO 3000. */
SELECT * FROM EMP
WHERE ( COMM IS NULL
OR COMM = 0 ) /* PARENTHASIS RUN CONDITIONS TOGETHER PRE FILTERS DATA, 
ADDS EMPLOYEES THAT ALSO HAD A 0 FOR COMMISION */
AND SAL > 1100 AND SAL < 5000
AND SAL != 3000;


/* WRITE A QUERY THAT RETURNS THOSE EMPLOYEES THAT ARE SALESMAN AND 
THAT MAKE EITEHR 300 DOLLARS IN COMMISION OR GREATER THAN 1000 DOLLARS IN COMMISION */
SELECT * FROM EMP
WHERE JOB = 'SALESMAN'
AND ( COMM = 300 OR COMM > 1000);

/* SELECT JOB WITH SALESMAN USING WILD CARD S FOR SALESMAN IN JOB CATEGORY*/
SELECT * FROM EMP
WHERE JOB LIKE 'S%'

/* SELECT JOB WITH MANAGERS USING WILD CARD M FOR MANAGERS IN JOB CATEGORY*/
SELECT * FROM EMP
WHERE JOB LIKE 'M%';

SELECT * FROM EMP

/* CHANGE COLUMN NAMES */
SELECT ENAME "EMPLOYEE NAME", SAL SALARY, COMM COMMISION /* QUOTES ALLOW FOR SPACE IN COLUMN NAME */
FROM EMP;

/* USE PIPES TO PRINT MY NAME IS AND CATERGORY DATA */
SELECT 'HELLO MY NAME IS '|| ENAME AS "CONCATENATED VALUE"
FROM EMP
WHERE JOB = 'MANAGER';

/* CONCAT STATEMENT FOR EMPLOYEE INCOME AND NAME */
SELECT ENAME || ' MAKES $' || SAL || ' PER MONTH' AS "AMOUNT EMPLOYEE MAKES PER MONTH"
FROM EMP;

/* USE ORDER BY STATEMENT FOR EMPLOYEE NAME AND SALARY SORTED BY EMPLOYEE NAME */
SELECT ENAME, SAL
FROM EMP
ORDER BY ENAME





